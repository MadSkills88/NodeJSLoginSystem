<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/form-style2.css" type="text/css">
    <link rel="stylesheet" href="/css/profile1.css" type="text/css"/>
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div>
    <div class="title1">
        <h1>
          <% if (user.local.email) { %>
              <p>
                  <strong><%= user.local.username %></strong>
              </p>
          <% } else if (user.facebook.token) { %>
              <p>
                  <strong><%= user.facebook.name %></strong>
              </p>
          <% } else { %>
              <p>
                  <strong>Welcome Back!</strong>
              </p>
          <% } %>
        </h1>
    </div>
    <!-- LOCAL INFORMATION -->
    <div class="content1">
        <div>
            <form action="" method="post">
                <ul class="ul-list">
                    <li>
                        <label for="id">ID</label><br>
                        <input id="id" name="id" type="text" required class="input" placeholder="<%= user._id %>"/>
                    </li>
                    <li>
                        <label for="changeName">Name</label><br>
                        <input id="changeName" name="nameChange" type="text" required class="input" placeholder=""/>
                    </li>
                    <li>
                        <label for="changeUsername">Username</label><br>
                        <input id="changeUsername" name="usernameChange" type="text" required class="input" placeholder="<%= user.local.username %>"/>
                    </li>
                    <li>
                        <label for="changeEmail">Email</label><br>
                        <input id="changeEmail" name="emailChange" type="email" required class="input" placeholder="<%= user.local.email %>"/>
                    </li>
                        <label for="changePassword">New Password</label><br>
                        <input id="changePassword" name="passwordChange" type="password" required class="input" placeholder=""/>
                    </li>
                    <li>
                        <label for="changePasswordConfirm">Confirm New Password</label><br>
                        <input id="changePasswordConfirm" name="passwordChangeConfirm" type="password" required class="input" placeholder=""/>
                    </li>
                    <li>
                        <input type="submit" value="SAVE CHANGES" class="btn">
                    </li>
                </ul>
            </form>
            <% if (user.local.email) { %>
                <strong>id</strong>: <%= user._id %><br>
                <strong>email</strong>: <%= user.local.email %><br>
                <strong>password</strong>: <%= user.local.password %>
            <% } else { %>
                <a href="/connect/local">Connect Local</a>
            <% } %>
        </div>
    </div>
</div>
</body>
</html>
