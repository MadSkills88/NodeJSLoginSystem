<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/profile1.css" type="text/css"/>
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div>
    <div class="title1">
        <h1>
          <% if (user.local.email) { %>
              <p>
                  <strong><%= user.local.username %></strong>
              </p>
          <% } else if (user.facebook.token) { %>
              <p>
                  <strong><%= user.facebook.name %></strong>
              </p>
          <% } else { %>
              <p>
                  <strong>Welcome Back!</strong>
              </p>
          <% } %>
        </h1>
    </div>
    <!-- LOCAL INFORMATION -->
    <div class="content1">
        <div>
            <% if (user.local.email) { %>
                <p>
                    <strong>id</strong>: <%= user._id %><br>
                    <strong>username</strong>: <%= user.local.username %><br>
                    <strong>email</strong>: <%= user.local.email %><br>
                    <strong>password</strong>: <%= user.local.password %>
                </p>

                <a href="/unlink/local">Unlink</a>
            <% } else { %>
                <a href="/connect/local">Connect Local</a>
            <% } %>
        </div>
    </div>
</div>
</body>
</html>
